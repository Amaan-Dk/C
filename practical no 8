// write a program to add,subtract,mulyiply,and divid two number accepted from user by using switch
// date: 03/10/2022
//name:amaan zahir dandekar
#include <stdio.h>

void main() {
    int n1,n2,add,sub,mul,div,opt;
    printf("enter fisrt no n1:");
    scanf("%d",&n1);
    printf("enter second number n2:");
    scanf("%d",&n2);
    printf("\n menu");
    printf("\n 1:addition");
    printf("\n 2:subtraction");
    printf("\n 3:multiplication");
    printf("\n 4:division");
    printf("\n enter any one option (1-4):");
    scanf("%d",&opt);
     
           switch(opt)
        {
            case 1:
                  add=n1+n2;
                  printf("addition of the two numbers is %d.",add);
                  break; 
            case 2:
                  sub=n1-n2;
                  printf("subtraction of the two numbers is %d.",sub);
                  break;
            case 3:      
                  mul=n1*n2;
                  printf("multiplication of two numbers is %d.",mul);
                  break;
            case 4:
                  div=n1/n2;
                  printf("division of two numbers is %d.",div);
                  break;
                  
         default:
                  printf("invalid option!");         
                  
        } 
                  
                  
                  
        }   

